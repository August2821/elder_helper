<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/kakaoMapFindWayImage1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="카카오맵 실행 화면"
        android:scaleType="fitXY"
        android:src="@drawable/kakao_map_find_way4" />

    <!-- 상단 어두운 배경 -->
    <View
        android:id="@+id/darkOverlayTop"
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:layout_alignParentTop="true"
        android:background="#80000000" />

    <!-- 하단 어두운 배경 -->
    <View
        android:id="@+id/darkOverlayBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/redBlinkingBox"
        android:background="#80000000" />

    <TextView
        android:id="@+id/newTextBox2"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/redBlinkingBox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="72dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:text="깜빡거리는 박스를 클릭해주세요"
        android:textColor="#000000"
        android:textSize="34sp" />

    <!-- 깜빡이는 빨간 테두리의 투명한 박스 -->
    <RelativeLayout
        android:id="@+id/redBlinkingBox"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="322dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rect_border_red">

        <Button
            android:id="@+id/button"
            android:layout_width="381dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="카카오맵" />
    </RelativeLayout>

</RelativeLayout>
